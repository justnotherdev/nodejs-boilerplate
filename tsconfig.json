{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"rootDir": "./src",
		"outDir": "./build",
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2015"],
		"types": ["node", "reflect-metadata"],
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"removeComments": true,
		"noImplicitAny": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "test", "./build", "**/*spec.ts"]
}
